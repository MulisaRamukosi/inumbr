<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/txt_comb_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comb_guide"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/mp_8dp"/>

    <LinearLayout
        android:id="@+id/ll_number_inputs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/mp_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_comb_guide"
        >

        <EditText
            android:id="@+id/edt_comb_in_1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_circle"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:hint="@string/h_1"
            android:inputType="number"
            android:maxLength="3"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp"/>

        <EditText
            android:id="@+id/edt_comb_in_2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_circle"
            android:hint="@string/h_2"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="number"
            android:maxLength="3"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp"/>

        <EditText
            android:id="@+id/edt_comb_in_3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_circle"
            android:hint="@string/h_3"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="number"
            android:maxLength="3"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp"/>

        <EditText
            android:id="@+id/edt_comb_in_4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_circle"
            android:hint="@string/h_4"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="number"
            android:maxLength="3"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp"/>

        <EditText
            android:id="@+id/edt_comb_in_5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_circle"
            android:hint="@string/h_5"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="number"
            android:maxLength="3"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp"/>

        <EditText
            android:id="@+id/edt_comb_in_6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_circle"
            android:hint="@string/h_6"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="number"
            android:maxLength="3"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mp_16dp"
        android:layout_marginHorizontal="@dimen/mp_8dp"
        android:text="@string/comb_length_guide"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_number_inputs" />

    <EditText
        android:id="@+id/edt_comb_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="@dimen/mp_16dp"
        android:layout_marginHorizontal="@dimen/mp_8dp"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_comb_gen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/generate_comb"
        app:layout_constraintTop_toBottomOf="@+id/edt_comb_length"
        android:layout_marginTop="@dimen/mp_16dp"
        android:layout_marginHorizontal="@dimen/mp_8dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_comb_gen"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="@dimen/mp_16dp"
        android:layout_marginHorizontal="@dimen/mp_8dp">

        <LinearLayout
            android:id="@+id/ll_comb_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>