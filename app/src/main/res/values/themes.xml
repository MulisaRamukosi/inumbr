<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base application theme. -->
    <style name="Theme.Inumbr" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="textAppearanceButton">@style/TextAppearance.Regular</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>



    <style name="TextAppearance.Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="TextAppearance.Bold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/google_sans_bold</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Regular</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:textAppearance">@style/TextAppearance.Regular</item>
    </style>

    <style name="textview.Title.Bold" parent="TextAppearance.Bold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FilledButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingLeft">@dimen/button_padding_left_right</item>
        <item name="android:paddingRight">@dimen/button_padding_left_right</item>
        <item name="android:textAppearance">@style/TextAppearance.Regular</item>
        <item name="backgroundTint">@color/color_accent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconPadding">@dimen/button_padding_left_right</item>
    </style>

    <style name="OutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textAppearance">@style/TextAppearance.Regular</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_layout_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_layout_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_layout_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_layout_corner_radius</item>
        <item name="boxStrokeColor">?colorAccent</item>
        <item name="endIconTint">?android:textColorSecondary</item>
        <item name="hintTextColor">?colorAccent</item>
    </style>

</resources>